<h1>New Pet</h1>

<div class="form-card">
  <%= form_with scope: :pet, url: pets_path, local: true do |form| %>
    <div class="form-group">
      <%= form.label :name %>
      <%= form.text_field :name %>
    </div>

    <div class="form-group">
      <%= form.label :age %>
      <%= form.text_area :age %>
    </div>

    <div class="form-group">
      <%= form.label :description %>
      <%= form.text_area :description %>
    </div>

    <div class="form-group">
      <%= form.submit "Create Pet", class: "btn" %>
    </div>
  <% end %>
</div>
