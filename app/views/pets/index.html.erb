<h1>Pets table </h1>

<table>
  <tr>
    <th colspan="5"></th>
  </tr>
  <% @pets.each do |p| %>
    <tr>
        <td><%= link_to p.name, pet_path(p)  %></td>
        <td><%= link_to 'Edit', edit_pet_path(p) %></td>
        <td><%= button_to 'Remove', pet_path(p), method: :delete %></td>
    </tr>
  <% end %>
</table>
<br />
<%= link_to 'New pet', new_pet_path %>