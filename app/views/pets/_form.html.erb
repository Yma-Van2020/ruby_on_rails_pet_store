<%= form_with model: @pet, local: true do |form| %>
    <% if @pet.errors.any? %>
      <div id="error_explanation" class="error-box">
        <h2>
          <%= pluralize(@pet.errors.count, "error") %> prohibited this article from being saved:
        </h2>
        <ul>
          <% @pet.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  
    <div class="form-card">
      <div class="form-group">
        <%= form.label :name %>
        <%= form.text_field :name %>
      </div>
  
      <div class="form-group">
        <%= form.label :age %>
        <%= form.text_area :age %>
      </div>
  
      <div class="form-group">
        <%= form.label :description %>
        <%= form.text_area :description %>
      </div>
  
      <div class="form-group">
        <%= form.submit "Update Pet", class: "btn" %>
      </div>
    </div>
<% end %>
  